@{
    ViewData["Title"] = "Placas de Trânsito - Identificador";
}

<div class="container mt-2">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-light text-center">
            <h4></i>Classificador<br/>Placas de Trânsito</h4>
        </div>

        <div class="card-body">
            <div id="imagePreview" class="image-preview border border-secondary rounded p-3 mb-4 text-center bg-light">
                <i class="fas fa-image"></i>
            </div>

            <form id="imageForm" action="/Home/ClassifyImage" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="imageUpload" class="form-label"><i class="fas fa-camera"></i> Carregue sua imagem:</label>
                    <input class="form-control" type="file" id="imageUpload" name="imageUpload" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-sync-alt"></i> Classificar placa...</button>
            </form>

            <br>

            <div id="resultSection" class="@(ViewBag.ClassificationResult != null ? "" : "d-none")">
                <h4><i class="fas fa-sign"></i> Resultado:</h4>
                <div class="alert alert-info text-center">
                    <p style="margin: 0; padding: 0;" id="classificationResult">@ViewBag.ClassificationResult</p>
                </div>
            </div>
        </div>
        <div class="card-footer bg-dark text-light text-center">
            <small>&copy; 2024 - Jean Pasquini - Dirija com segurança <i class="fas fa-car-side"></i></small>
        </div>
    </div>
</div>

    

