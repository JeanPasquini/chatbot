@{
    ViewData["Title"] = "Traffic Sign Identifier";
}

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fas fa-tools"></i> Traffic Sign Identifier</h3>
        </div>
        <div class="card-body">
            <div id="imagePreview" class="image-preview">
                <i class="fas fa-image"></i>
            </div>

            <form id="imageForm" class="mb-3">
                <div class="mb-3">
                    <label for="imageUpload" class="form-label"><i class="fas fa-upload"></i> Selecione uma imagem da ferramenta:</label>
                    <input class="form-control" type="file" id="imageUpload" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-check"></i> Classificar Ferramenta</button>
            </form>

            <div id="resultSection" class="d-none">
                <h4><i class="fas fa-info-circle"></i> Resultado da Classificação:</h4>
                <div class="alert alert-info" id="classificationResult">
                    Aguardando classificação...
                </div>
            </div>
        </div>
    </div>
</div>

    

